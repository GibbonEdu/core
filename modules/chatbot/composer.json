{
    "name": "gibbon/chatbot",
    "description": "AI Teaching Assistant module for Gibbon",
    "type": "gibbon-module",
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-pdo": "*",
        "gibbon/core": "^23.0",
        "gibbon/domain": "^23.0",
        "gibbon/services": "^23.0",
        "gibbon/system": "^23.0",
        "guzzlehttp/guzzle": "^7.0",
        "smalot/pdfparser": "^2.11"
    },
    "autoload": {
        "psr-4": {
            "Gibbon\\Module\\ChatBot\\": "src/"
        },
        "classmap": [
            "../../src"
        ]
    },
    "extra": {
        "display-name": "ChatBot",
        "category": "Learning"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        },
        "sort-packages": true,
        "platform": {
            "php": "7.4"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "minimum-stability": "stable"
}
